@model Assignment5.Models.SongGenreViewModel

@{
    ViewData["Title"] = "Songs";
}

<h1>Songs</h1>

<form asp-controller="Songs" asp-action="Index" method="get">
    <p>

        Genre: <select asp-for="SongGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Artist: <select asp-for="SongArtist" asp-items="Model.Artists">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Songs!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
            </tr>
        }
    </tbody>
</table>
